<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violeta"
    android:backgroundTint="#323130"
    tools:context=".Aprender">

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="144dp"
        android:layout_below="@+id/tv_preguntaJuego"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="97dp"
        android:background="#313130"
        android:rotationX="41"
        app:srcCompat="@drawable/level4icon" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="167dp"
        android:layout_below="@+id/tv_preguntaJuego"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="215dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="0dp"
        android:background="#323130"
        android:rotationX="41"
        app:srcCompat="@drawable/level3icon" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimaryDark"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_boton" />

    <TextView
        android:id="@+id/tv_preguntaJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="Seleccione un juego "
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/botonlvl1"
        android:layout_width="wrap_content"
        android:layout_height="183dp"
        android:layout_below="@+id/tv_preguntaJuego"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="-36dp"
        android:layout_marginEnd="102dp"
        android:background="#323130"
        android:rotationX="52"
        app:srcCompat="@drawable/level1icon" />

    <ImageButton
        android:id="@+id/botonlvl2"
        android:layout_width="190dp"
        android:layout_height="154dp"
        android:layout_below="@+id/tv_preguntaJuego"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="221dp"
        android:background="#323130"
        android:rotationX="44"
        app:srcCompat="@drawable/level2icon" />

</RelativeLayout>